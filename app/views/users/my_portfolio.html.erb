<h1 class = "User-details-heading"> My Portfolio </h1>

<div>
    <h3> Search Stocks </h3>
    <%= form_with url: search_stock_path, method: :get,data: {remote: true} do %>
        <div class = "form-group row">
            <div class = "col-sm-8 no-right-padding">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock Search", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class = "col-sm-4 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>



<div id = "results">
    
</div>

<% if !@tracked_stocks.empty? %>
    <%= render 'stocks/list' %>
<% end %>
