<h1 class = "friends-heading"> Friends </h1>

<div class = "search-area">
    <h3> Search Friends </h3>
    <%= form_with url: search_friend_path, method: :get,data: {remote: true} do %>
        <div class = "form-group row">
            <div class = "col-sm-8 no-right-padding">
                <%= text_field_tag :friend, params[:friend], placeholder: "Enter Name or Email", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class = "col-sm-4 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>

<div id = "friends" >

</div>

<% if !@user_friends.empty? %>
    <%= render "friends/friend_list" %>
<% end %>